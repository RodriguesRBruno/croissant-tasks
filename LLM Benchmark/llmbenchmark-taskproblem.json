{
    "@context": {
        "cr": "http://mlcommons.org/croissant/",
        "sc": "https://schema.org/"
    },
    "@type": "cr:TaskProblem",
    "@id": "https://example/ailuminate/task#problem",
    "name": "AILuminate Benchmark Example",
    "description": "This TaskProblem defines a template for AILuminate Model submissions.",
    
    "cr:tasktype": "Benchmarking",
    "cr:input": [
        {
            "@type": "cr:InputSpec",
            "name": "LLM Input",
            "cr:schema": {
                "@type": "cr:RecordSet",
                "fields": [
                    {
                        "@type": "Field",
                        "name": "release_prompt_id",
                        "dataType": "sc:Text"
                    },
                    {
                        "@type": "Field",
                        "name": "prompt_text",
                        "dataType": "sc:Text"
                    },
                    {
                        "@type": "Field",
                        "name": "hazard",
                        "dataType": "sc:Text"
                    },
                    {
                        "@type": "Field",
                        "name": "persona",
                        "dataType": "sc:Text"
                    },
                    {
                        "@type": "Field",
                        "name": "locale",
                        "dataType": "sc:Text"
                    },
                    {
                        "@type": "Field",
                        "name": "prompt_hash",
                        "dataType": "sc:Text"
                    }
                ]
            }
        }
    ],
    "cr:output": [
        {
            "@type": "cr:OutputSpec",
            "name": "LLM Output",
            "constraints": {
                "@type": "sc:Text"
            }
        }
    ],
    "cr:implementation": {
        "@type": "cr:ImplementationSpec",
        "name": "Implementation Specification",
        "description": "Must be a runnable script or container that implements the LLM."
    },
    "cr:evaluation": {
        "@type": "cr:EvaluationMethod",
        "name": "LLM Scorer",
        "url": "https://link/to/evaluator/script.py"
    },
    "cr:reference_assets": {
        "cr:inputs": [
            {
                "@type": "croissant:InputData",
                "name": "AILuminate Demo Prompts",
                "description": "This dataset includes the open test prompts from AILuminate. The benchmark itself runs on a different set of prompts.",
                "cr:schema": [
                    {
                        "@type": "sc:Dataset",
                        "name": "AILuminate Demo - English",
                        "url": "https://github.com/mlcommons/ailuminate",
                        "source": {
                            "fileObject": "https://github.com/mlcommons/ailuminate/blob/main/airr_official_1.0_demo_en_us_prompt_set_release.csv",
                            "extract": {
                                "column": [
                                    "release_prompt_id",
                                    "prompt_text",
                                    "hazard",
                                    "persona",
                                    "locale",
                                    "prompt_hash"
                                ]
                            }
                        },
                        "fields": [
                            {
                                "@type": "Field",
                                "name": "release_prompt_id",
                                "dataType": "sc:Text"
                            },
                            {
                                "@type": "Field",
                                "name": "prompt_text",
                                "dataType": "sc:Text"
                            },
                            {
                                "@type": "Field",
                                "name": "hazard",
                                "dataType": "sc:Text"
                            },
                            {
                                "@type": "Field",
                                "name": "persona",
                                "dataType": "sc:Text"
                            },
                            {
                                "@type": "Field",
                                "name": "locale",
                                "dataType": "sc:Text"
                            },
                            {
                                "@type": "Field",
                                "name": "prompt_hash",
                                "dataType": "sc:Text"
                            }
                        ]
                    },
                    {
                        "@type": "RecordSet",
                        "name": "AILuminate Demo - French",
                        "source": {
                            "fileObject": "https://github.com/mlcommons/ailuminate/blob/main/airr_official_1.0_demo_fr_fr_prompt_set_release.csv",
                            "extract": {
                                "column": [
                                    "release_prompt_id",
                                    "prompt_text",
                                    "hazard",
                                    "persona",
                                    "locale",
                                    "prompt_hash"
                                ]
                            }
                        },
                        "fields": [
                            {
                                "@type": "Field",
                                "name": "release_prompt_id",
                                "dataType": "sc:Text"
                            },
                            {
                                "@type": "Field",
                                "name": "prompt_text",
                                "dataType": "sc:Text"
                            },
                            {
                                "@type": "Field",
                                "name": "hazard",
                                "dataType": "sc:Text"
                            },
                            {
                                "@type": "Field",
                                "name": "persona",
                                "dataType": "sc:Text"
                            },
                            {
                                "@type": "Field",
                                "name": "locale",
                                "dataType": "sc:Text"
                            },
                            {
                                "@type": "Field",
                                "name": "prompt_hash",
                                "dataType": "sc:Text"
                            }
                        ]
                    }
                ]
            }
        ]
    }
}